# Maintainer: Sean Liao <mono-pkgbuild@seankhliao.com>

_name=stylesheet
_pkgname=singlepage-${_name}
pkgname=${_pkgname}-git
pkgver=r2021.09.18.23.16
pkgrel=1
pkgdesc="singlepage web server"
arch=(x86_64)
url="https://github.com/seankhliao/mono"
license=(MIT)
makedepends=(git go)
provides=(${_pkgname})
conflicts=(${_pkgname})
source=(${_name}.env
    ${_name}.md)
sha256sums=('55280346741faac3b23544ffebd265efb719b061fd3087ef343df8d60772136a'
            '549e0bd719f6d0ec9a643b028591fdce70fdf0a2efc2d241e88fa4d2a0c45dc1')

package() {
  install -Dm644 ${_name}.env ${pkgdir}/etc/singlepage/${_name}.env
  install -Dm644 ${_name}.md ${pkgdir}/etc/singlepage/${_name}.md
}

pkgver() {
    printf "r%s" "$(date +%Y.%m.%d.%H.%M)"
}
