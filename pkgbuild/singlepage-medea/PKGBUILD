# Maintainer: Sean Liao <mono-pkgbuild@seankhliao.com>

_name=medea
_pkgname=singlepage-${_name}
pkgname=${_pkgname}-git
pkgver=r2021.09.18.23.11
pkgrel=1
pkgdesc="singlepage web server"
arch=(x86_64)
url="https://github.com/seankhliao/mono"
license=(MIT)
makedepends=(git go)
provides=(${_pkgname})
conflicts=(${_pkgname})
source=(${_name}.env
    ${_name}.md)
sha256sums=('caa3636c14a66e342c55e365db7ab69c8bab77c0b4e5b1733296ae0f00103084'
            '5520df936967eea91d685469746eb8fc47115c7c951ef520602a7f3c0d0cf3f7')

package() {
  install -Dm644 ${_name}.env ${pkgdir}/etc/singlepage/${_name}.env
  install -Dm644 ${_name}.md ${pkgdir}/etc/singlepage/${_name}.md
}

pkgver() {
    printf "r%s" "$(date +%Y.%m.%d.%H.%M)"
}
